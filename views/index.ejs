<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        
        <table id='busTable'>
            <tr>
                <th>Bus Number</th>
                <th>Status</th>
            </tr>
        <% for(let i = 0; i < buses.length; i++) { %> 
            <tr id="bus_<%= buses[i].number%>">
                <td><%= buses[i].number %></td>
                <td><%= buses[i].status %></td>
            </tr>
        <% } %> 
        </table>
        <script src="/socket.io/socket.io.js"></script>
        <script src='js/indexConnect.js'></script>
    </body>
</html>