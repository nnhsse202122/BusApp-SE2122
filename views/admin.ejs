<html>
    <head>
        <title>Admin View</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
        <script src="/js/manageBuses.js"></script>
        <form action="/api/save" method="post">
            <div id="buttons">
                <button type="submit" id="save">Save</button>
                <button type="button" onclick="addBus()" id="addBus">Add Bus</button>
            </div>
            <table id="table">
                <colgroup>
                    <col span="2">
                  </colgroup>
                <tr>
                    <th>Bus Number</th>
                    <th>Status</th>
                    <th class="deleteBus"></th>
                </tr>
            <% for(let i = 0; i < buses.length; i++) { %> 
                <tr>
                    <td><input class="tableInput" type="number" name="busNumber" value=<%= buses[i].number %>></td>
                    <td>
                        <select name="busStatus">
                            <option value="NOT HERE" <%= buses[i].status == "NOT HERE"? "selected" : "" %>>NOT HERE</option>
                            <option value="HERE" <%= buses[i].status == "HERE"? "selected" : "" %>>HERE</option>
                            <option value="LOADING" <%= buses[i].status == "LOADING"? "selected" : ""%>>LOADING</option>
                            <option value="GONE" <%= buses[i].status == "GONE"? "selected" : "" %>>GONE</option>
                        </select>
                    </td>
                    <td class="deleteBus"><i class="fas fa-times" onclick="removeBus(this)"></i></td>
                </tr>
            <% } %> 
            </table>
        </form>
    </body>
</html>